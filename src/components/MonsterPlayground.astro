---
import type { SandpackFiles, SandpackSetup, SandpackTheme } from '@codesandbox/sandpack-react/types';
import CodePlayground from './react/CodePlayground'
import { monokaiPro } from '@codesandbox/sandpack-themes';

interface Props {
  localStorageId: string;
  customSetup?: SandpackSetup;
  template?:
    | "react-ts"
    | "react"
    | "vanilla"
    | "vanilla-ts"
    | "vue"
    | "vue-ts"
    | "angular"
    | "svelte"
    | "solid"
    | "test-ts";
  theme?: SandpackTheme;
  title?: string;
  files: SandpackFiles;
  activeFile?: string;
  showTabs?: boolean;
  showConsole?: boolean;
}

const {
  customSetup,
  localStorageId,
  title = "Code Playground",
  template = "react-ts",
  theme = monokaiPro,
  files,
  showConsole = false,
  showTabs = true,
} = Astro.props
---

<CodePlayground
  client:load
  localStorageId={localStorageId}
  files={files}
  customSetup={customSetup}
  template={template}
  theme={theme}
  title={title}
  showConsole={showConsole}
  showTabs={showTabs}
/>
