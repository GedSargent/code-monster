---
import type { SandpackFiles, SandpackProviderProps, SandpackSetup } from '@codesandbox/sandpack-react/types';
import CodePlayground from './react/CodePlayground';

interface Props {
  localStorageId: string;
  customSetup?: SandpackSetup;
  customOptions?: Pick<SandpackProviderProps, 'options'>
  template?:
    | "react-ts"
    | "react"
    | "vanilla"
    | "vanilla-ts"
    | "vue"
    | "vue-ts"
    | "angular"
    | "svelte"
    | "solid"
    | "test-ts";
  title?: string;
  files: SandpackFiles;
  activeFile?: string;
  showTabs?: boolean;
  showConsole?: boolean;
  showPreview?: boolean;
}

const {
  customSetup,
  customOptions,
  localStorageId,
  title = "Code Playground",
  template = "react-ts",
  files,
  showConsole = false,
  showTabs = true,
  showPreview = true,
} = Astro.props
---

<CodePlayground
  client:load
  localStorageId={localStorageId}
  files={files}
  customSetup={customSetup}
  customOptions={customOptions}
  template={template}
  title={title}
  showConsole={showConsole}
  showTabs={showTabs}
  showPreview={showPreview}
/>
